                icon: { image: "img/marker.png",
                    iconsize: [44,44],
                    iconanchor: [12,46],
                    infowindowanchor: [12, 0] } }],
                icon: { 
	            image: "assets/img/marker.png", 
	            iconsize: [26, 46],
	            iconanchor: [12, 46],
	            infowindowanchor: [12, 0] },
	        latitude:40.7566,
